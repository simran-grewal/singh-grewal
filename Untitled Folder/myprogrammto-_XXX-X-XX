#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main()
{
  string str;
  string s;
  int t;
  cin>>t;
 while(t--){
 	cin>>str;
 	int i=0;
    s="";
  while(str[i]!='\0')
  {
  		int count=0,count1=0;
       
  		while(str[i]=='X')
  		{
  			count++;
            i++;
  		}
  		while(str[i]=='-')
  		{
  			count1++;
            i++;
  		}
  		if(count>=1){s.push_back('0'+count);}
  		if(count1>1)
  		{
  			while(count1>1){s.push_back('0');count1--;}
  		}
  		//i++;
  }

    cout<<s<<endl;
 			}

}

